{
    "root": true,
    "env": {
        "browser": true,
        "node": false,
        "commonjs": false,
        "es6": false
    },
    "parserOptions": {
        "ecmaVersion": 5,
        "sourceType": "script"
    },
    "globals": {
        "angular": true,
        "Highcharts": true,
        "gulp": true,
        "require": true,
        "$": true,
        "changeListenersFileInput": true,
        "IsLoadig": true,
        "getAndShowList": true,
        "classie": true,
        "submitShow": true,
        "withoutConnection": true,
        "changeListenerNewImageItem": true,
        "showAlert": true,
        "setLoading": true,
        "isDebug": true,
        "renderList": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            0,
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}